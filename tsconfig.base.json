{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "shared": ["shared/index.ts"],
      "shared/*": ["shared/*/index.ts"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  }
}
